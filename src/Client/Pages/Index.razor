@page "/"
@using Domain
<h1>Snake Eyes</h1>
<div>
    <Dice Pips="@_game.Eye1" />
    <Dice Pips="@_game.Eye2" />
</div>
<p>Score: @_game.Total</p>

<button @onclick="_game.Play" disabled="@_game.HasSnakeEye">Play</button>


<h3>Highscores</h3>
@if (_game.HasSnakeEye)
{
    <div class="alert alert-danger" role="alert">
        You lost the game
    </div>
    <button @onclick="_game.Restart">Restart</button>
}
    <ul>

        @foreach (int score in _game.HighScores.OrderByDescending(x => x))
        {
            <li>@score</li>
        }
    </ul>

@code {
    private Game _game = new Game();
}